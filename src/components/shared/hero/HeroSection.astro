---
import heroImage from "@/assets/hero/hero-image.png";
import { Image } from "astro:assets";
---

<section class="relative h-dvh w-full">
  <Image
    src={heroImage}
    alt="Furniture Hero Image"
    class="h-full w-full object-cover"
  />

  <div
    class="bg-card absolute right-4 bottom-8 left-4 flex max-w-xl flex-col gap-6 rounded-xl px-6 py-8 shadow-lg md:top-1/2 md:right-8 md:bottom-auto md:left-auto md:-translate-y-1/2 md:gap-8 md:px-10 md:pt-12 md:pb-10 lg:right-16 lg:px-12 lg:pt-16"
  >
    <div class="flex flex-col gap-2 md:gap-3">
      <h2 class="text-sm font-semibold tracking-[2px] md:text-base">
        New Arrival
      </h2>
      <h1
        class="text-primary text-3xl leading-tight font-bold md:text-4xl lg:text-5xl"
      >
        Discover Our<br />New Collection
      </h1>
      <p class="text-base leading-relaxed font-medium md:text-lg">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut elit tellus,
        luctus nec ullamcorper mattis.
      </p>
    </div>
    <a
      class="bg-primary w-fit px-12 py-4 text-sm font-bold text-white uppercase transition-all hover:brightness-110 md:px-16 md:py-6 md:text-base"
      href="/shop"
    >
      Buy Now
    </a>
  </div>
</section>
