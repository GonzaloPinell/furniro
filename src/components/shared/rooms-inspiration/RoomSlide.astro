---
import bedroomImage from "@/assets/rooms/bedroom.png";
import livingImage from "@/assets/rooms/living.png";
import { Image } from "astro:assets";

interface Props {
  id: string;
  number: string;
  category: string;
  title: string;
  image: string;
}

const { number, category, title, image } = Astro.props;

const images = {
  bedroom: bedroomImage,
  living: livingImage,
};

const selectedImage = images[image as keyof typeof images];
---

<div class="relative h-96 w-72 shrink-0 md:h-125 md:w-87.5 lg:h-145.5 lg:w-101">
  <Image src={selectedImage} alt={title} class="h-full w-full object-cover" />

  <!-- Info Card -->
  <div
    class="absolute bottom-4 left-4 flex items-end gap-4 bg-white/90 px-6 py-4 backdrop-blur-sm md:bottom-6 md:left-6 md:gap-6 md:px-8 md:py-6"
  >
    <div class="flex flex-col gap-1">
      <p class="text-xs text-gray-500 md:text-sm">
        {number}
        <span class="mx-2">â€”</span>
        {category}
      </p>
      <h3 class="text-2xl font-semibold text-gray-800 md:text-3xl">{title}</h3>
    </div>
    <button
      class="bg-primary flex h-10 w-10 shrink-0 items-center justify-center text-white transition-all hover:brightness-110 md:h-12 md:w-12"
      aria-label="View room details"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="2"
        stroke="currentColor"
        class="h-5 w-5 md:h-6 md:w-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"></path>
      </svg>
    </button>
  </div>
</div>
