<section class="flex flex-col items-center gap-8 px-12 py-16">
  <h2 class="text-4xl font-bold text-gray-800">Our Products</h2>

  <div
    class="grid w-full max-w-7xl grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4"
  >
    {products.map((product) => <ProductCard {...product} />)}
  </div>

  <button
    class="border-primary text-primary hover:bg-primary mt-4 border-2 px-12 py-3 text-sm font-semibold transition-all hover:text-white md:px-16 md:text-base"
  >
    Show More
