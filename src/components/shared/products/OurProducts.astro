    id: "syltherine",
    name: "Syltherine",
    description: "Stylish cafe chair",
    price: 2500000,
    originalPrice: 3500000,
    image: "syltherine",
    discount: 30,
    badge: "discount",
  },
  {
    id: "leviosa",
    name: "Leviosa",
    description: "Stylish cafe chair",
    price: 2500000,
    image: "leviosa",
  },
  {
    id: "lolito",
    name: "Lolito",
    description: "Luxury big sofa",
    price: 7000000,
    originalPrice: 14000000,
    image: "lolito",
    discount: 50,
    badge: "discount",
  },
  {
    id: "respira",
    name: "Respira",
    description: "Outdoor bar table and stool",
    price: 500000,
    image: "respira",
    badge: "new",
  },
  {
    id: "grifo",
    name: "Grifo",
    description: "Night lamp",
    price: 1500000,
    image: "grifo",
  },
  {
    id: "muggo",
